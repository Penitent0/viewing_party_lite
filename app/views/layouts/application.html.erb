<!DOCTYPE html>
<html>
  <head>
    <title>ViewingPartyLite</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
  <h2 style="text-align:center;">Viewing Party Lite</h2>

    <nav>
    <%= link_to "Landing Page", landing_page_path, local: true, method: :get  %>
    <% if !current_user %>
      <%= button_to 'Log In', login_path, local: true, method: :get %>
      <%= button_to "Create New User", register_path, local: true, method: :get %>
    <% else %>
      <%= button_to 'Log Out', logout_path, local: true, method: :delete %>
    <% end %>
    </nav>
    <% flash.each do |type, msg| %>
      <div>
      <p><%= msg %></p>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
